class Solution{
    
    public:
    vector<int> help_classmate(vector<int> arr, int n) 
    { 
        // Your code goes here
        vector<int> ans(n);
        stack<int> s;
        s.push(-1);
        
        for(int i = n-1; i>=0; i--){
            
            while(s.top() >= arr[i]){
                s.pop();
            }
            ans[i] = s.top();
            s.push(arr[i]);
        }
        return ans;
    } 
};
